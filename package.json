{
	"name": "snap-tweet",
	"version": "0.0.0-semantic-release",
	"description": "Snap a screenshot of a tweet",
	"keywords": [
		"twitter",
		"tweet",
		"snap",
		"snapshot",
		"screenshot"
	],
	"license": "MIT",
	"repository": "privatenumber/snap-tweet",
	"funding": "https://github.com/privatenumber/snap-tweet?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"bin/snap-tweet.js",
		"dist"
	],
	"main": "dist/tweet-camera.js",
	"bin": "bin/snap-tweet.js",
	"scripts": {
		"build": "rm -rf dist && tsup src --dts --minify --external '../package.json' --external 'yoga-layout-prebuilt'",
		"dev": "esno src/cli.ts",
		"lint": "eslint ."
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run build && lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": "eslint"
	},
	"dependencies": {
		"yoga-layout-prebuilt": "1.10.0"
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.13.2",
		"@types/react": "^17.0.39",
		"chrome-launcher": "^0.14.2",
		"chrome-remote-interface": "^0.31.0",
		"cleye": "^1.0.1",
		"eslint": "^8.9.0",
		"esno": "^0.14.1",
		"exit-hook": "^2.2.1",
		"husky": "^4.3.8",
		"ink": "^3.2.0",
		"ink-task-list": "^1.1.0",
		"lint-staged": "^12.3.4",
		"open": "^8.4.0",
		"p-retry": "^4.6.1",
		"react": "^17.0.2",
		"tempy": "^1.0.1",
		"tsup": "^5.11.13",
		"typescript": "^4.5.5",
		"unused-filename": "^2.1.0"
	},
	"eslintConfig": {
		"extends": "@pvtnbr"
	}
}
